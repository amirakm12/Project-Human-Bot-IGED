# IGED Environment Configuration Template
# Copy this file to .env and configure your settings

# Voice Recognition Settings
VOICE_SENSITIVITY=0.5
VOICE_TIMEOUT=5
VOICE_PHRASE_TIMEOUT=1.0

# Web Admin Panel Settings
ADMIN_PORT=8080
ADMIN_HOST=localhost
ADMIN_DEBUG=false

# Android Client Settings
ANDROID_PORT=9090
ANDROID_HOST=0.0.0.0

# Encryption Settings
ENCRYPTION_KEY_PATH=config/secret.key
ENCRYPTION_ALGORITHM=AES256

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/iged.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Memory Settings
MEMORY_FILE=memory/memory_log.json
MEMORY_MAX_ENTRIES=10000
MEMORY_ENCRYPTION=true

# Offline Mode Settings
OFFLINE_MODE=false
OFFLINE_MODELS_PATH=models/

# Security Settings
SECURITY_SCAN_THREADS=10
SECURITY_TIMEOUT=30
SECURITY_OUTPUT_DIR=output/security

# Data Analysis Settings
DATA_OUTPUT_DIR=output/data_analysis
DATA_PLOT_DPI=300
DATA_PLOT_FORMAT=png

# Network Intelligence Settings
NETWORK_OUTPUT_DIR=output/network_intelligence
NETWORK_SCAN_TIMEOUT=60

# Remote Control Settings
REMOTE_OUTPUT_DIR=output/remote_control
REMOTE_CONNECTION_TIMEOUT=30

# Code Generation Settings
CODEGEN_OUTPUT_DIR=output/codegen
CODEGEN_TEMPLATE_DIR=templates/

# Plugin Settings
PLUGIN_DIR=plugins/
PLUGIN_TIMEOUT=300
PLUGIN_SANDBOX=true

# GUI Settings
GUI_THEME=dark
GUI_GEOMETRY=1200x800
GUI_POSITION_X=100
GUI_POSITION_Y=100

# Performance Settings
MAX_WORKER_THREADS=10
MEMORY_LIMIT_MB=2048
CPU_LIMIT_PERCENT=80

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
DEVELOPMENT_MODE=false